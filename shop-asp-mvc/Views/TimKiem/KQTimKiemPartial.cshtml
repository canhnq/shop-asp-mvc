@using shop_asp_mvc.Models
@model IEnumerable<SanPham>

@{
    int iDem = 0;
    int iSLSanPhamTrenTrang = 6;
    int iTrang = 1;
}

<div class="col-md-9 product1">
    <div class=" bottom-product">
        @foreach (var item in Model.OrderBy(n => n.DonGia))
        {
            if (iDem % iSLSanPhamTrenTrang == 0 && iDem != 0)
            {
                iTrang++;
            }
            <div class="@Url.Content("col-md-4 bottom-cd simpleCart_shelfItem Trang"+iTrang.ToString())">
                <div class="product-at ">
                    <a href="@Url.Action("ThemGioHang","GioHang",new {@MaSP = item.MaSP,@strURL = Request.Url.ToString() })">
                        <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" alt="" style="width = 150px;height=150px;">
                        <div class="pro-grid">
                            <span class="buy-in"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Đặt mua</font></font></span>
                        </div>
                    </a>
                </div>
                <p class="tun"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Một thực tế đã được thiết lập từ lâu rằng một người đọc</font></font></p>
                <a href="@Url.Action("ThemGioHang","GioHang",new { @MaSP = item.MaSP, @strURL = Request.Url.ToString() })" class="item_add"><p class="number item_price"><i> </i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.DonGia.Value.ToString("#,##") VND</font></font></p></a>
                @Ajax.ActionLink("Thêm giỏ hàng Ajax", "ThemGioHangAjax", "GioHang", new { @MaSP = item.MaSP, @strURL = Request.Url.ToString() }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "divGioHang", InsertionMode = InsertionMode.Replace }, null)
            </div>
            iDem++;
        }
        <div class="clearfix"> </div>

        <div class="Trang">
            @for (int i = 1; i <= iTrang; i++)
            {
                <a class="linkTrang" data-sotrang="@Url.Content("Trang"+i) " href="#">
                    @i
                </a>
            }

        </div>
    </div>

</div>
<style>
    .simpleCart_shelfItem {
        display: none;
    }

    .Trang1 {
        display: block;
    }
</style>
<script>
    $('.linkTrang').click(function () {
        $(".simpleCart_shelfItem").hide();
        var soTrang = $(this).attr("data-sotrang");
        $("@Url.Content("." + soTrang)").show();
    });
</script>
